datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Status {
  DRAFT
  SCHEDULED
  PUBLISHED
}

model Schedule {
  id        String   @id @default(uuid())
  title     String   @default("new Schedule")
  userId    String   @default(dbgenerated("requesting_user_id()"))
  timezone  String   @default("America/Vancouver")
  schedule  Json     @default("[]")
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now()) @db.Timestamptz()
  updatedAt DateTime @updatedAt @db.Timestamptz()

  @@index([userId])
}

model Post {
  id String @id @default(uuid())

  // owner
  userId String @default(dbgenerated("requesting_user_id()"))

  title   String   @default("Untitled Post")
  content String[]
  status  Status   @default(DRAFT)

  // scheduling time with timezone
  scheduledAt DateTime? @db.Timestamptz()

  // reference ID's
  tweet_ids   String[] @default([])
  linkedin_id String?

  // text for linkedin
  linkedinContent String?

  createdAt DateTime @default(now()) @db.Timestamptz()
  updatedAt DateTime @updatedAt @db.Timestamptz()

  images Image[]

  @@index([userId])
}

model Image {
  id String @id @default(uuid())

  url String

  postId String
  post   Post   @relation(fields: [postId], references: [id])
}
